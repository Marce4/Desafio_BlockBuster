<div id="<%= dom_id client %>">
  <tr>
    <th scope="row"><%= client.id %></th>
    <td><%= client.name %></td>
    <td><%= client.age %></td>
    <td><%= client.movies.last %></td>
    <td><%= link_to "Detalle del Cliente", client %></td>
    <td><%= link_to "Editar Cliente", edit_client_path(client) %></td>
    <td><%= button_to "Eliminar Cliente", @client, method: :delete, class: "boton-amarillo" %></td>
  </tr>
</div>
